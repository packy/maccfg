[include]
        path = ~/.gitconfig_user

[alias]
        co = checkout
        ln = log --name-only
        uncommit = reset --mixed HEAD~1
        fixup = commit --fixup=HEAD
        loggrep = log --perl-regexp --grep
        stashed = stash list --pretty=stashed
        jira = log --pretty=jira

[apply]
        whitespace = fix

[core]
	editor = xemacs-wait
	excludesfile = ~/.gitignore

[rebase]
        autosquash = true

[pretty]
        jira = format:Author: %aN <%aE>%nDate:   %ci%n%n%w(73,1,2)%+s%n%+b%x1B
        stashed = format:%gd: %Cred%h%Creset %Cgreen[%ar]%Creset %s

#
# valid colors are "normal", "black", "red", "green", "yellow",
#                  "blue", "magenta", "cyan", "white"
#
# valid attributes are "bold", "dim", "ul", "blink", "reverse"
#

[color]
        branch = auto
        diff = auto
        status = auto

[color "branch"]
        current = yellow bold
        local = yellow
        remote = red

[color "diff"]
	meta = yellow
        frag = magenta
        old = red
        new = green
	commit = yellow reverse

[color "status"]
        added = blue
        changed = green
        untracked = cyan

[color "decorate"]
       current=black white
       local=black white
       plain=black white
[web]
	browser = open
[help]
	format = web
[gui]
	recentrepo = /Users/packy/git/scriptlib
	recentrepo = /Users/packy/git/ack2
[push]
	default = simple

#
# Using p4merge as Git mergetool 
#

[merge]
        keepBackup = false
        tool = p4mergetool
        
[mergetool "p4mergetool"]
        cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$REMOTE" "$PWD/$LOCAL" "$PWD/$MERGED"
        keepTemporaries = false
        trustExitCode = false
        keepBackup = false

[difftool]
        prompt = false

[difftool "p4mergetool"]
        cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$LOCAL" "$REMOTE"

[log]
	date = local
