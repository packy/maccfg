#!/bin/sh
$HOME/bin/xemacs-start-server
EMACSCLIENT=/Applications/Emacs.app/Contents/MacOS/bin/emacsclient

if [[ $1 == "-r" ]]; then
    shift
    for FILE in $*; do
        $EMACSCLIENT -n --eval "(find-file-read-only \"$FILE\")"
    done

else
    for FILE in $*; do
        $EMACSCLIENT -n $FILE
    done
fi
