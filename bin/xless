#!/usr/bin/env bash

CMD=
TMP=/tmp/xless_$$.sh

echo "#!$(which bash)" > $TMP
echo "$(which lesswait) \"$@\""  >> $TMP
echo "rm -f $TMP" >> $TMP
chmod +x $TMP

osascript \
  -e 'tell application "iTerm2"' \
  -e "set newWindow to (create window with default profile command \"$TMP\")" \
  -e 'end tell'
